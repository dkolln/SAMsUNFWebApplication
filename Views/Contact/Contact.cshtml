@model  IEnumerable<SAMsUNFWebApplication.Models.CSVContacts>
@using GridMvc.Html
@{
    ViewBag.Title = "Contact";
}

<h2>Contact</h2>
<head>
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/gridmvc.datepicker.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Site.css") rel=" stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-datepicker.js")"></script>

    <script type="text/javascript">
        function chgAction() {
            var form = document.form1;

            console.log('chgAction()');
            console.log(form.recipient.selectedIndex);

            switch (form.recipient.selectedIndex) {
                case 1:
                    form.action = "/Contact/ImportStudent";
                    break;
                case 2:
                    form.action = "/Contact/ImportContact";
                    break;
            }
        }

    </script>

</head>
<table>
    <tr>
        <td>
            <div class="jumbotron">
                <h1 style="color:darkgoldenrod; font-size:larger;">Student Action Management System (SAMs)</h1>
                <h1 style="color:darkgoldenrod; font-size:large; ">CSV Contacts</h1>
            </div>
        </td>
    </tr>
    <tr>
        <td align="center" style="padding-left:100px;">
            <form id="form1" name="form1" action="/" method="post" enctype="multipart/form-data">

                <label for="file">Filename:</label>
                <input type="file" name="file" id="file" />

                Please choose a dept:<br />
                <select name="recipient" id="recipient" size="1" onChange="chgAction()">
                    <option value="" selected="selected">Select</option>
                    <option value="ImportStudent?file">Import Student</option>
                    <option value="ImportContact?file">Import Contact</option>
                </select>

                <input type="submit">
            </form>
        </td>
    </tr>
</table>

