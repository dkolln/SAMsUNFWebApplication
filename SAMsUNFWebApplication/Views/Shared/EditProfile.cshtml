@model  SAMsUNFWebApplication.Models.ProfileCollection
@{
    ViewBag.Title = "EditProfile";
}

<head>
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Style.css")" rel="stylesheet" />

</head>
<table class="table">
    <tr>
        <td>
            <h1 style="color:#255694; font-size:x-large; font-weight:bold; ">Edit a Profile</h1>
        </td>
    </tr>
    <tr>
        <td>
            <div>
                @using (Html.BeginForm("EditProfl", "Profile", FormMethod.Get))
                {
                    //TxtFirstName, string TxtLastName, string TxtSchool, string TxtGrade, string TxtGender, string TxtHomeroom
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>
                                    @Html.TextBoxFor(z => z.singleProfile.First().profile_id,
                                        new
                                        {
                                            @Style = "display: none; border:0px;",
                                            @id = "ProfileID",
                                            @Name = "ProfileID",
                                            @Value = Model.singleProfile.First().profile_id,
                                            @readonly = "readonly"
                                        })
                                    @Html.Label("User Name:")
                                </td>
                                <td>
                                    @Html.TextBoxFor(z => z.singleProfile.First().user_name,
                                        new
                                        {
                                            @id = "ProfileUserName",
                                            @Name = "ProfileUserName",
                                            @Value = Model.singleProfile.First().user_name,
                                            @required = "required",
                                            @style = "width: 250px;",
                                            @class = "form-control"
                                        })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.Label("Password:")
                                </td>
                                <td>
                                    @Html.TextBoxFor(z => z.singleProfile.First().password,
                                        new
                                        {
                                            @id = "ProfilePassword",
                                            @Name = "ProfilePassword",
                                            @Value = Model.singleProfile.First().password,
                                            @required = "required",
                                            @style = "width: 250px;",
                                            @class = "form-control"
                                        })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.Label("Contact:")
                                </td>
                                <td>
                                    @Html.DropDownListFor(z => z.profilecontactselectlist, Model.profilecontactselectlist,
                                   new
                                   {
                                       @style = "width: 250px;",
                                       @class = "form-control"
                                   })
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2" align="right">
                                    <input id="submit" class="btn btn-primary" type="submit" value="Add" style="padding-left:20px;" />
                                    <button class="btn btn-info" onclick="history.go(-1)">Cancel</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                }

            </div>

        </td>
    </tr>
</table>


