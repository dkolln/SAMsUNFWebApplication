@model  SAMsUNFWebApplication.Models.RemedialActionCollection
@{
    ViewBag.Title = "EditRemedialAction";
}

<head>
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />

</head>
<table>
    <tr>
        <td>
            <h1 style="color:#255694; font-size:x-large; font-weight:bold; ">Edit a School</h1>
        </td>
    </tr>
    <tr>
        <td>
            <div>
                @using (Html.BeginForm("EditRemedialAction", "RemedialAction", FormMethod.Get))
                {
                    //TxtFirstName, string TxtLastName, string TxtSchool, string TxtGrade, string TxtGender, string TxtHomeroom
                    <table class="table">
                        <thead><tr><td><a href="javascript:void(0);" onclick="history.go(-1);">Go Back</a></td></tr></thead>
                        <tbody>
                            <tr>
                                <td></td>
                                <td>
                                    @Html.TextBoxFor(z => z.singleRemedialAction.First().remedial_action_id,
                                        new
                                        {
                                            @Style = "display: none; border:0px;",
                                            @id = "RemedialActionID",
                                            @Name = "RemedialActionID",
                                            @Value = Model.singleRemedialAction.First().remedial_action_id,
                                            @readonly = "readonly"
                                        })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.Label("Remedial Action Name:")
                                </td>
                                <td>
                                    @Html.TextBoxFor(z => z.singleRemedialAction.First().name,
                                        new
                                        {
                                            @id = "RemedialActionName",
                                            @Name = "RemedialActionName",
                                            @Value = Model.singleRemedialAction.First().name,
                                            @required = "required",
                                            @style = "width: 250px;",
                                            @class = "form-control"
                                        })
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2" align="right">
                                    <input id="submit" class="btn btn-primary" type="submit" value="Add" style="padding-left:20px;" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                }

            </div>

        </td>
    </tr>
</table>


