<!--[if !IE]><!-->
<html lang="en">
<!--<![endif]-->


<head>
    <title>Home Page-Student Action Management System</title>
    <!-- Meta -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="favicon.ico">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,400italic,500,500italic,700,700italic,900,900italic,300italic,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,700,300,100' rel='stylesheet' type='text/css'>
    <!-- Global CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/myTemplate/")plugins/bootstrap/css/bootstrap.min.css">
    <!-- Plugins CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/myTemplate/")plugins/font-awesome/css/font-awesome.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/myTemplate/")plugins/flexslider/flexslider.css">
    <!-- Theme CSS -->
    <link id="theme-style" rel="stylesheet" href="@Url.Content("~/Content/myTemplate/")css/styles.css">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->



</head>

<body class="blog-page blog-category-page">

    <!-- ******HEADER****** -->
    <header class="header header-blog">
        <div class="container">
            <h1 class="logo">
                <a href="@Url.Action("Index", "Home")"><span style="width: 150px; height: 46px; background-image: url('@Url.Content("~/Content/myTemplate/")images/background/JaxLogo.jpg'); display:block; background-repeat: no-repeat"></span></a>
            </h1><!--//logo-->
            <nav class="main-nav navbar-right" role="navigation">
                <div class="navbar-header">
                    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button><!--//nav-toggle-->
                </div><!--//navbar-header-->
                <div id="navbar-collapse" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">@Html.ActionLink("Dashboard", "Dashboard", "Dashboard")</li>
                        <li class="nav-item">@Html.ActionLink("Office Visit", "OfficeVisit", "OfficeVisit")</li>
                        <li class="nav-item dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="0" data-close-others="false" href="#">Admin Management <i class="fa fa-angle-down"></i></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Student", "Student", "Student")</li>
                                <li>@Html.ActionLink("Grade", "Grade", "Grade")</li>
                                <li>@Html.ActionLink("School", "CodeOfConductViolation", "CodeOfConductViolation")</li>
                                <li>@Html.ActionLink("School Year", "SchoolYear", "SchoolYear")</li>
                                <li>@Html.ActionLink("Homeroom", "Homeroom", "Homeroom")</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Contact")</li>
                                <li>@Html.ActionLink("Profile", "Profile", "Profile")</li>
                                <li>@Html.ActionLink("Office Visit", "OfficeVisit", "OfficeVisit")</li>
                                <li>@Html.ActionLink("Code of Conduct", "CodeOfConductViolation", "CodeOfConductViolation")</li>
                                <li>@Html.ActionLink("Remedial Action", "RemedialAction", "RemedialAction")</li>
                                <li>@Html.ActionLink("Settings", "Settings", "Settings")</li>
                            </ul>
                        </li><!--//dropdown-->
                        <li class="nav-item dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="0" data-close-others="false">Training<i class="fa fa-angle-down"></i></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Administrator Training", "Training", "Training")</li>
                                <li>@Html.ActionLink("Technical Training", "Training", "Training")</li>
                            </ul>
                        </li><!--//dropdown-->
                        <li class="nav-item nav-item-main-site last"><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Back to main site</a></li>
                    </ul><!--//nav-->


                </div><!--//navabr-collapse-->
            </nav><!--//main-nav-->
        </div><!--//container-->
    </header><!--//header-->

    <div class="sections-wrapper">

        <!-- ******Why Section****** -->
        <section id="why" class="section why">
            <div class="container">
            <br />
                <h2 class="title text-center">Office Visits</h2>
                <p class="intro text-center">Student history of office visits</p>
                <div class="row item">

                    <h3 style="color:#255694; font-size:x-large; ">Office Visits</h3>
                    <div style="width:1000px; text-align:center;font-size:small; ">

                        @Html.Grid(Model).Columns(columns =>
           {
               columns.Add(c => c.student_number).Titled("StudentNumber").Filterable(true);
               columns.Add(c => c.student_name).Titled("Name").Filterable(true);
               columns.Add(c => c.total_visits).Titled("Visit").Filterable(true);
               columns.Add(c => c.office_visit_dt).Titled("Date").Filterable(true);
               columns.Add(c => c.school_name).Titled("School").Filterable(true);
               columns.Add(c => c.grade_value).Titled("Grade").Filterable(true);
               columns.Add(c => c.homeroom_name).Titled("Homeroom").Filterable(true);
               columns.Add(c => c.content_course_name).Titled("Content").Filterable(true);
               columns.Add(c => c.sent_by_contact_name).Titled("SentBy").Filterable(true);
               columns.Add(c => c.offenses).Titled("Offenses").Filterable(true);
               columns.Add(c => c.arrival_dt).Titled("Arrived").Filterable(true);
               columns.Add(c => c.handled_by_contact_name).Titled("HandledBy").Filterable(true);
               columns.Add(c => c.consequences).Titled("Consequences").Filterable(true);
               columns.Add(c => c.comments).Titled("Comment").Filterable(true);
           }).WithPaging(5).Sortable(true)
                    </div>

                    @Html.ActionLink("Export To Excel", "ExportToExcel", null, new  { @class = "btn btn-primary btn-large" })

                    @Html.ActionLink("Add Office Visit", "AddOfficeVisit", "AddOfficeVisit")

                </div><!--//item-->



            </div><!--//container-->
        </section>
    </div><!--//section-wrapper-->


    <!-- ******FOOTER****** -->
    <footer class="footer">
        <div class="footer-content">
            <div class="container">
            </div><!--//container-->
        </div><!--//footer-content-->
        <div class="bottom-bar">
            <div class="container">
                <small class="copyright">Copyright 2015</small>
            </div><!--//container-->
        </div><!--//bottom-bar-->
    </footer><!--//footer-->
    <!-- Javascript -->
    <script type="text/javascript" src="@Url.Content("~/Content/myTemplate/")plugins/jquery-1.11.2.min.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/myTemplate/")plugins/jquery-migrate-1.2.1.min.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/myTemplate/")plugins/bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/myTemplate/")plugins/bootstrap-hover-dropdown.min.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/myTemplate/")plugins/back-to-top.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/myTemplate/")plugins/jquery-placeholder/jquery.placeholder.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/myTemplate/")plugins/FitVids/jquery.fitvids.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/myTemplate/")plugins/flexslider/jquery.flexslider-min.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/myTemplate/")js/main.js"></script>

    <!-- blog specific js starts -->
    <script type="text/javascript" src="@Url.Content("~/Content/myTemplate/")plugins/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/myTemplate/")plugins/masonry.pkgd.min.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/myTemplate/")js/blog.js"></script>
    <!-- blog specific js ends -->


</body>
</html>