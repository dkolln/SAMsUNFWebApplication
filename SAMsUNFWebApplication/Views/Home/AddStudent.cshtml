@model  SAMsUNFWebApplication.Models.StudentCollection
@{
    ViewBag.Title = "AddStudent";
}

<head>
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />

</head>
<table>
    <tr>
        <td colspan="2" align="center" height="30px" style='padding-top:20px;padding-bottom:20px;'>
            <h3 style="color:#255694; font-size:x-large; ">Add A Student</h3>
        </td>
    </tr>
    <tr>
        <td>
            <div>
                @using (Html.BeginForm("AddStudent", "AddStudent"))
                {
                    
                    @Html.Label("Select Grade:")
                    @Html.DropDownListFor(m => m.allGrades,
                    new SelectList(Model.allGrades,
                                   "grade_id", "grade_value",
                                   Model.allGrades.First().grade_value))
                    <br />

                    <input id="submit" type="submit" value="Add" style="padding-left:20px;" />
                    <input id="submit" type="submit" value="Cancel" />
                }
            </div>
        </td>
    </tr>
</table>
