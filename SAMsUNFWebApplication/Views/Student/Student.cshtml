                                    <li>@Html.ActionLink("Remedial Action", "RemedialAction", "RemedialAction")</li>
                                    <li>@Html.ActionLink("Settings", "Settings", "Settings")</li>
                                </ul>
                            </li><!--//dropdown-->
                            <li class="nav-item nav-item-main-site last"><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Back to main site</a></li>
                        </ul><!--//nav-->


                    </div><!--//navabr-collapse-->
                </nav><!--//main-nav-->
            </div><!--//container-->
        </header><!--//header-->


        <div class="blog blog-category container">
            <h2 class="page-title text-center"><i class="fa fa-folder-open"></i> Student Action Management System (SAMs): Student</h2>
            <div class="row">

                <div style="width:1000px; text-align:left;">
                    @Html.ActionLink("Add New Student", "AddStudent", "AddStudent")
                </div>
                <div style="width:1000px; text-align:center;">




                    @Html.Grid(Model).Columns(columns =>
               {
               columns.Add()
               .Encoded(false)
               .Sanitized(false)
               .SetWidth(30)
               .RenderValueAs(d =>
            @<b>
                @Html.ActionLink("Edit", "Index")
            </b>);
                   columns.Add(c => c.student_id).Titled("ID").SetWidth(15);
                   columns.Add(c => c.last_name).Titled("Duval Code").SetWidth(15);
                   columns.Add(c => c.first_name).Titled("Code").SetWidth(5);
                   columns.Add(c => c.gender).Titled("Code Description").SetWidth(350).Sanitized(true);
               }).WithPaging(10).Sortable(true).Filterable(true)
                </div>


            </div><!--//row-->
        </div><!--//blog-->
